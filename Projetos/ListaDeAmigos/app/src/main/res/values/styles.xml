<resources>

    <!-- Base applicatio Theme -->
    <!-- Remove o ActionBar das Activities -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Tornando a barra de status translucida -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Drawer" parent="Theme.AppCompat.NoActionBar">
        <!-- Tornando a barra de status translucida -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- permite dar um estilo com texto grande, brando e sombreado -->
    <style name="sombreado">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">36dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">1.6</item>
    </style>
</resources>
